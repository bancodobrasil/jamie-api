    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPM",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "start:dev",
            ],
            "runtimeVersion": "16.16.0",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
